<% if @teams !=nil %>
  <div class="contextual">
    <p><%= link_to l(:create_mbo), { :controller=>'mbo',:action => 'new'}, :class => 'icon icon-add' %>|
       <%#= link_to l(:look_mbo), { :controller=>'mbo',:action => 'managerlist'} %>
    </p>
  </div>
<% end %>

<h2><%= l(:mbo_list) %></h2>

<%# if @mbos !=nil and @team == %>
<% if @mbos !=nil %>
  <table class="list groups">
    <thead><tr>
        <th><%=l(:field_mbo)%></th>
        <th><%=l(:label_mbo_owner)%></th>
        <th></th>
      </tr></thead>
    <% @mbos.each do |mbo| %>
      <tr class="<%= cycle 'odd', 'even' %>">
        <td><%= link_to h(mbo.content),{ :controller=>'mbo', :action => 'edit', :id => mbo} %></td>
        <td align="center"><%= mbo.users.size %></td>
        <% if @teams != nil %>
          <td class="buttons"><%= link_to l(:button_delete),{ :controller=>'mbo',:action => 'destroy', :id => mbo},:confirm => l(:text_are_you_sure), :method => :delete, :class => 'icon icon-del' %></td>
        <% end %>

      </tr>
    <% end %>
  </table>
<% else %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% end %>



